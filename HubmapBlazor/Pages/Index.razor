
@*@page "/"*@
@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>
<MudThemeProvider />
<h1>Smart Targets</h1>

<MudGrid >
    <MudItem xs="12" Class="d-flex align-center justify-center mud-width-full py-8">
        <MudImage Fluid="true" Src="Images/SmartTargets.jpg" Alt="SmartTargets diagram" Elevation="25" Class="rounded-lg" Width="700"/>
    </MudItem>


    <MudItem xs="4"></MudItem>
    <MudItem xs="4" sm="2" Class="d-flex align-center justify-center mud-width-full py-8">
        <MudIconButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small"
                       OnClick=ShowTissues>Tissues</MudIconButton>
    </MudItem>
    <MudItem xs="4" sm="2" Class="d-flex align-center justify-center mud-width-full py-8">
        <MudIconButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small"
                       OnClick=ShowProteins>Proteins</MudIconButton>
    </MudItem>
    <MudItem xs="4"></MudItem>

</MudGrid>


